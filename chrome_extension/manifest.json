{
    "name": "Tanglr",
    "version": "1.0.3",
    "manifest_version": 2,    
    "description": "Tanglr anonymously links your browsing with that of another person.",
    "background": {
        "persistent": true,
        "page": "background.html"
    },
    "web_accessible_resources": [
        "jquery-1.8.3.min.js",
        "popup.js",
        "background.js"
    ],
    "browser_action": {
        "default_icon": {
            "19": "icon_19.png",
            "38": "icon_38.png"
        },
        "default_popup": "popup.html",
        "default_title": "Tanglr"
    },
    "permissions": [
        "tabs",
        "cookies",
        "http://tanglr.net/"
    ],
    "incognito": "split"
}